{
  "name": "storybook-addon-mantine",
  "description": "Switch between multiple mantine themes without restarting Storybook, and visualise your components / pages with each theme applied.",
  "version": "6.0.0-beta.1",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsup",
    "build:watch": "npm run build --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "run-p build:watch 'storybook --quiet'",
    "prerelease": "zx scripts/prepublish-checks.mjs",
    "release": "npm run build && auto shipit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o docs-build",
    "chromatic": "chromatic --exit-zero-on-changes"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/josiahayres/storybook-addon-mantine"
  },
  "keywords": [
    "storybook-addons",
    "style",
    "debug",
    "layout",
    "mantine",
    "emotion",
    "storybook",
    "react",
    "theme"
  ],
  "author": "josiahayres <josiahayres@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/josiahayres/storybook-addon-mantine/issues"
  },
  "homepage": "https://josiahayres.github.io/storybook-addon-mantine/",
  "peerDependencies": {
    "@mantine/core": "^8.0.0",
    "@mantine/hooks": "^8.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^9.0.0"
  },
  "storybook": {
    "displayName": "storybook-addon-mantine",
    "unsupportedFrameworks": [
      "vue",
      "angular",
      "web-components",
      "ember",
      "html",
      "svelte",
      "preact",
      "aurelia",
      "marionette",
      "react-native"
    ],
    "supportedFrameworks": [
      "react"
    ],
    "icon": "https://raw.githubusercontent.com/mantinedev/mantine/master/docs/src/images/og-image.png"
  },
  "devDependencies": {
    "@mantine/core": "^8.0.0",
    "@mantine/hooks": "^8.0.0",
    "@storybook/addon-links": "^9.0.12",
    "@storybook/react": "9.0.12",
    "@storybook/react-vite": "9.0.12",
    "@storybook/test": "8.6.14",
    "@types/node": "^22.15.32",
    "@types/react": "^18.3.23",
    "@vitejs/plugin-react": "^4.5.2",
    "auto": "^11.3.0",
    "boxen": "^7.1.1",
    "dedent": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prompts": "^2.4.2",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "storybook": "^9.0.12",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "zx": "^3.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./manager": {
      "types": "./dist/manager.d.ts",
      "require": "./dist/manager.js",
      "import": "./dist/manager.mjs"
    },
    "./preview": {
      "types": "./dist/preview.d.ts",
      "require": "./dist/preview.js",
      "import": "./dist/preview.mjs"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@storybook/components": "^8.6.14"
  }
}
